
[core]
	editor = nvim
[alias]
	l = log --graph --oneline --relative-date --pretty='%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s'
	s = status -sb --ahead-behind
	d = diff --minimal
	co = checkout
[init]
	defaultBranch = main
[includeIf "gitdir:~/.dotfiles"]
	path = ~/.config/gitconfig/dotfiles
[safe]
	# Disable ownership mismatch warning of NAS'ed repos.
	# This is a security risk! Git traverses through folders in search for a .git
	# folder. A mallicious partent .git folder could extort secrets (stored with git?).
	directory = *
